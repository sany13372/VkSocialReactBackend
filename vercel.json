{
  "version": 2,
  "env": {
    "PORT": "PORT"
  },
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE"
      ]
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }]
}